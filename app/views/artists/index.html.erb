<p id="notice"><%= notice %></p>

<%= link_to 'New Artist', new_artist_path,class: "btn btn-primary"%>

  <div class="row">
              <% @artists.each do |artist| %>

    <div class="col-md-6">

      <div class="well">
     <p><%= image_tag artist.avatar.url(:medium) ,class: "thumb" %></p>
        <h3><%= link_to artist.name,artist %></h3>
        
        <p><%= link_to 'Show',artist,class: "btn btn-primary" %> <%= link_to 'Edit', edit_artist_path(artist),class: "btn btn-success" %> <%= link_to 'Destroy', artist, method: :delete, data: { confirm: 'Are you sure?' } ,class: "btn btn-danger"%></p>
    </div>
</div>  
    <% end %>


</div>




